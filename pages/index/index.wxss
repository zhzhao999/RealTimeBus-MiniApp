.search-container {
  width: 100%;
  height: 102rpx;
  line-height: 80rpx;
  background-color: #398bfb;
  color: #FFF;
  z-index: 100;
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
}
.search-container .search-input {
  margin: 22rpx 100rpx 10rpx;
  width: 100%;
  height: 56rpx;
  background: #fff;
  border: 1rpx solid #eaeaea;
  border-radius: 50rpx;
  font-size: 30rpx;
}
.search-container .search-input input{
  padding-left: 60rpx;
  height: 56rpx;
}
.search-container icon {
  position: absolute;
  top: 12rpx;
  left: 120rpx;
  color: #aaa;
  z-index: 10;
}

.lists-container{
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.tab-h{
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  background: #F7F7F7;
  box-sizing: border-box;
  overflow: hidden;
  font-size: 16px;
  display: flex;
  position: fixed;
  top: 102rpx; 
  left: 0; 
  z-index: 99;
}
.tab-item{
  width: 50%;
  text-align: center;

}
.tab-item.active{
  color: #398bfb;
  position: relative;
}
.tab-item.active:after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #398bfb;
  position: absolute; 
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}
.item-ans{ 
  width: 100%;
  display: flex; 
  flex-grow: row no-wrap;
  justify-content: space-between; 
  padding: 30rpx;
  box-sizing: border-box; 
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #F2F2F2;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}
.avatar .img{
  width: 100%;
  height: 100%;
}
.avatar .doyen{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}
.expertInfo{
  font-size: 12px;
  flex-grow: 2;
  color: #B0B0B0;
  line-height: 1.5em;
}
.expertInfo .name{
  font-size: 16px;
  color:#000;
  margin-bottom: 6px;
}
.askBtn{ 
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px; 
  border-radius: 60rpx;
  border: 1px solid #4675F9; 
  color:#4675F9;
}
.tab-content{
  margin-top: 182rpx;
}
.scoll-h{
  height: 100%;
}

